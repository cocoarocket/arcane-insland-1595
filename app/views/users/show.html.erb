<% provide(:title, @user.name) %>



<style>
	.user-page-header {
		border:1px solid #c9c9c9;
		height: 200px;
		/*width: 100%;*/
		padding: 5px;
	}

	.user-page-header-tools{
		border-bottom:1px solid #c9c9c9;
		border-left:1px solid #c9c9c9;
		border-right:1px solid #c9c9c9;
		height: 25px;
		/*width: 100%;*/
		padding: 5px;
	}
</style>

<div class="user-page-header">
  <h4><%= @user.name %></h4>
  <%= @user.name %>, <%= @user.email %>
</div>

<div class="user-page-header-tools">
	<% if signed_in? && current_user?(@user) %>
    <%= link_to "Settings", user_settings_path(:user_id => @user) %><span class="cmt-box-lnk-sep"> | </span>
	<% end %>
  <%= link_to "Photos", "#" %><span class="cmt-box-lnk-sep"> | </span>
  <%= link_to "Friends", "#" %>
</div>