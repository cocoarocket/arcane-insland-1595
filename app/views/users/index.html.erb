<% @users.each do |user| %>

	<div>
	  <div style="display:inline-table"><%= link_to user.name + ", " + user.email, user_path(user) %></div>
			<% if (signed_in? and current_user?(user)) or admin?(current_user) %>
	      <div style="display:inline-table; float:right;">
	        <%= link_to "Edit", "#" %>
	        <span class="breadcrumb-separator"> | </span>

	        <%= link_to "Delete user", user_path(user), method: :delete %>
	        <span class="breadcrumb-separator"> | </span>

		      admin? <%= admin?(user) %>
	        <span class="breadcrumb-separator"> | </span>

	        current_user? <%= current_user?(user) %>
	      </div>
			<% end %>
	</div>

<% end %>