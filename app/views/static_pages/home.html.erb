<h3>Home page</h3>

<%= will_paginate @allcontent.paginate(page: params[:page], :per_page => 6) %>

<% @allcontent.paginate(page: params[:page], :per_page => 6).each do |c| %>
  <div class="well-box-my">
    <div class="well-center-my">

      <div class="text-block">
        <div class="text-image-gradient"></div>
        <h3><%= c.title %></h3>

        <div class="text-block-full">
          <%= c.content.html_safe %>
        </div>

      </div>

	    <p>
		    <ol class="file-list">
			    <% @assets = get_assets(c) %>
	        <% @assets.each_with_index do |a,n| %>
            <li><%= link_to a.asset_file_name, a.asset.url %></li>
          <% end %>
			  </ol>
	    </p>
      <p><%= link_to "learn more", sm_content_path(c), class: "btn btn-primary" %></p>
    </div>
    <div class="well-foot-my"><%= time_ago_in_words c.updated_at %></div>
  </div>
<% end %>

<%= will_paginate @allcontent.paginate(page: params[:page], :per_page => 6) %>
