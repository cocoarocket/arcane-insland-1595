<%#= tinymce %>

<%= form_for(@sm_content, html: { multipart: true }) do |f| %>
  <%# if @smc.errors.any? %>
    <!-- <ul>
      <%# @smc.errors.full_messages.each do |msg| %>
        <li><%#= msg %></li>
      <%# end %>
    </ul> -->
  <%# end %>

	<div class="actions">
    <%= f.text_field :submenu_id, type: "hidden", value: @submenu_id %>
    <%= f.text_field :title, placeholder: "Title", class: "span13", style: "min-width:200px" %>
	</div>


	<!--
	<div class="actions" style="border-bottom-right-radius:2px; border-top-right-radius: 2px;">
    <%#= f.text_area :content, placeholder: "Content text", :class => "tinymce", style: "min-width:200px;" %>
	</div>-->



  <div class="actions" style="border-bottom-right-radius:2px; border-top-right-radius: 2px;">
    <%= f.text_area :content, placeholder: "Content text", :id => "some-textarea", :class => "wysihtml5" %>

    <script type="text/javascript">
	    $(document).ready(function(){

		    $('.wysihtml5').each(function(i, elem) {
			    $(elem).wysihtml5();
		    });

	    })
    </script>
	</div>


	<p>
    <%= f.fields_for :assets do |asset_fields| %>
      <%# if asset_fields.object.new_record? %>
        <div class="actions">
          <%= asset_fields.file_field :asset, :multiple => true, :name => 'sm_content[assets_attributes][][asset]' %>
        </div>
      <%# end %>
    <% end %>
	</p>

	<p>
		<div class="actions">
      <%= f.submit "Create", class: "btn" %>
		</div>
	</p>
<% end %>