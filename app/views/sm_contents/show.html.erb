<%# breadcrumb :submenus, @submenus_path %>

<div class="well-box-my">
  <div class="well-center-my">
    <div class="text-block-full">
      <div class="text-image-gradient2"></div>
      <h3><%= @smc.title %></h3>
      <%#= raw @smc.content %>
	    <div class="text-block-full">
        <%= @smc.content.html_safe %>
		  </div>
    </div>

	  <p>
		  <ol class="file-list">
		    <% @smc.assets.each do |opt| %>
		      <li>
		        <%#= link_to image_tag(asset_fields.object.asset.url(:thumb)), asset_fields.object.asset.url(:original) %>
		        <%#= link_to opt.asset_file_name, opt.asset.url  %>
			      <% if opt.asset_content_type == 'application/pdf' %>
		          <%= link_to opt.asset_file_name, download_pdf_path(opt.id)  %>
			      <% end %>

		        <% if opt.asset_content_type == 'application/zip' %>
		          <%= link_to opt.asset_file_name, download_pdf_path(opt.id)  %>
		        <% end %>

		        <% if opt.asset_content_type == 'application/doc' %>
		          <%= link_to opt.asset_file_name, download_pdf_path(opt.id)  %>
		        <% end %>

		        <% if opt.asset_content_type == 'image/jpg' %>
		          <%= link_to opt.asset_file_name, download_pdf_path(opt.id)  %>
		        <% end %>

		        <% if opt.asset_content_type == 'text/plain' %>
		          <%= link_to opt.asset_file_name, download_txt_path(:asset_id => opt.id)  %>
		        <% end %>
		      </li>
		    <% end %>
			</ol>
	  </p>


    <p>
      <%= link_to "Edit text", edit_sm_content_path(@smc), class: "btn btn-primary" %>
      <%= link_to "Add files", new_sm_content_asset_path(@smc), class: "btn btn-primary" %>
      <%= link_to "Delete files", sm_content_edit_assets_path(@smc), class: "btn btn-primary", :method => :get %>
      <%#= link_to "Delete All", sm_content_path(:submenu_id => @smc.submenu_id), class: "btn btn-danger", :method => :delete, :confirm => "Are you sure?" %>
      <%= link_to "Delete All", sm_content_path, class: "btn btn-danger", :method => :delete, :confirm => "Are you sure?" %>
    </p>

  </div>
  <div class="well-foot-my"><%= time_ago_in_words @smc.updated_at %></div>
</div>