<h1><%= @gmenu.genmenuname %> Show</h1>

<ul class="unstyled">
	<li><%= @gmenu.genmenuname %> <%= render "menu" %></li>
</ul>

<ul class="unstyled">
	<p>List</p>

  <% @gmenu.submenus.each do |smenu| %>
		<li><%= smenu.sname %> <%= render "smenu", { :gmenu => @gmenu, :smenu => smenu } %></li>
  <% end %>
</ul>

<%= form_for [@gmenu, @gmenu.submenus.build] do |f| %>
  <div class="input-append actions">
    <%= f.text_field :sname, placeholder: "Sub menu name", class: "span2" %>
    <%= f.submit "Create", class: "btn" %>
  </div>
<% end %>